<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pk.test.Info_Users">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="133dp"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:padding="10dp"
            app:srcCompat="?android:attr/actionModeCopyDrawable" />

        <TextView
            android:id="@+id/friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Friends:" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/friendsList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="186dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="140dp" />

            <TextView
                android:id="@+id/registered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="registered"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="191dp" />

            <TextView
                android:id="@+id/addres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="21dp" />

            <TextView
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="age"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="55dp" />

            <TextView
                android:id="@+id/company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="89dp" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="phone"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="174dp" />

            <TextView
                android:id="@+id/balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Balance"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="38dp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="123dp" />

            <TextView
                android:id="@+id/favorite_fruit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Favorite Fruit"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="157dp" />

            <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.21"
                android:text="About"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="207dp" />

            <TextView
                android:id="@+id/eyeColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="eyeColor"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="106dp" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="4dp" />

            <TextView
                android:id="@+id/isActive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Active"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="72dp" />

            <TextView
                android:id="@+id/tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tags" />


        </LinearLayout>
    </ScrollView>

    <ListView
        android:id="@+id/tagsList"
        android:layout_width="wrap_content"
        android:layout_height="230dp"

        android:scrollbars="vertical" />

</LinearLayout>
